<div class="search-section span4">
  <h3>Search Fortunes
  <a id="search-about-toggle" class="label pull-right muted" data-toggle="modal" data-target="#search-about">about</a></h3>
  <div id="search-about" class="modal hide fade about">
    <h3>Search for Fortunes</h3>
    <p>Search the server for fortunes containing the matching keywords that are specified.</p>
  </div>
  <div class="search-list">
    <form class="well well-small">
      <input id="search_field" name="search" placeholder="Search for words in fortunes">
    </form>
    <div id="search_progress" class="hidden progress progress-striped active">
      <div class="bar" style="width: 100%">Searching: <strong>{{term}}</strong></div>
    </div>
    <div id="search_results" class="hidden">
      <p>Results for: <strong>{{term}}</strong></p>
      <div>
      {{#each results}}
        <p class="result">{{{this}}}</p>
      {{/each}}
      </div>
    </div>
  </div>
</div>


